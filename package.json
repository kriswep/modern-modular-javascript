{
  "name": "composite-game",
  "version": "1.0.0",
  "description": "composition game",
  "main": "lib/server/index.js",
  "author": "kriswep",
  "license": "MIT",
  "babel": {
    "presets": [
      "latest"
    ]
  },
  "env": {
    "browser": true
  },
  "scripts": {
    "prebuild": "npm run lint && npm run cleanclient",
    "build": "webpack",
    "cleanlib": "del lib",
    "cleanclient": "del dist/client-bundle.js*",
    "dev": "webpack-dev-server --inline --hot",
    "precompile": "npm run lint && npm run cleanlib",
    "compile": "babel -d lib/ src/",
    "lint": "eslint src/**.js",
    "prestart": "npm run compile && npm run build",
    "start": "node lib/server/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "plugins": [
      "import"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-loader": "^6.2.7",
    "babel-preset-latest": "^6.16.0",
    "del-cli": "^0.2.0",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.5.0",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "express": "^4.14.0"
  }
}
