{
  "name": "modern-modular-javascript",
  "version": "1.0.0",
  "description": "A modern and modular JavaScript boilerplate setup",
  "main": "lib/server/index.js",
  "author": "kriswep",
  "license": "Unlicense",
  "babel": {
    "presets": [
      "latest"
    ]
  },
  "env": {
    "browser": true
  },
  "scripts": {
    "prebuild": "npm run lint && npm test && npm run cleanclient",
    "build": "webpack",
    "cleanlib": "del lib",
    "cleanclient": "del dist/client-bundle.js*",
    "coverage": "nyc npm test",
    "coverage:watch": "watch \"npm run coverage\" ./src",
    "coverage-report": "nyc report --reporter=text",
    "precompile": "npm run lint && npm test && npm run cleanlib",
    "compile": "babel --ignore **.spec.js -d lib/ src/",
    "dev": "webpack-dev-server --inline --hot",
    "fulltest": "parallelshell \"npm run lint:watch\" \"npm run test:watch\"",
    "lint": "eslint \"./src\"",
    "lint:watch": "watch \"npm run lint\" ./src",
    "prestart": "npm run compile && npm run build",
    "start": "node lib/server/index.js",
    "test": "babel-node node_modules/.bin/tape \"./src/**/*.spec.js\" | faucet",
    "test:watch": "watch \"npm test\" ./src"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ],
    "reporter": [
      "lcov",
      "text-summary",
      "text"
    ],
    "require": [
      "babel-register"
    ],
    "cache": true,
    "all": true,
    "check-coverage": true
  },
  "eslintConfig": {
    "extends": "airbnb",
    "plugins": [
      "import"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-loader": "^6.2.7",
    "babel-preset-latest": "^6.16.0",
    "del-cli": "^0.2.0",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.5.0",
    "faucet": "^0.0.1",
    "nyc": "^10.1.2",
    "parallelshell": "^2.0.0",
    "supertest": "^3.0.0",
    "tape": "^4.6.2",
    "watch": "^1.0.1",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "express": "^4.14.0"
  }
}
